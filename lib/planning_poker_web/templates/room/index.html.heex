<section class="phx-hero">
  <h1>Rooms</h1>

  <%= link "New Room", to: Routes.room_path(@conn, :new), class: "button" %>
</section>

<section class="container">
  <table>
    <thead>
      <tr>
        <th># ID</th>
        <th>Name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= for room <- @rooms do %>
        <tr>
          <td><%= room.id %></td>
          <td><%= room.name %></td>
          <td><%= link "Go", to: Routes.room_path(@conn, :show, room) %></td>
          <td><%= link "Delete", to: Routes.room_path(@conn, :delete, room), method: :delete, data: [confirm: "Are you sure?"] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
